<!-- Page Content -->
<div class="container">
  <div class='row'>
    <div class='col-md-9'>
      <h1 class="my-4 text-center text-lg-left"><%= @product.name %></h1>
    </div>
    <div class='col-md-3'>
      <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-info btn-md" if current_user.admin?%>
    </div>

  </div>
  <br>

  <div class='row'>
    <div class="col-md-3">
      Description:
    </div>
    <div class="col-md-9">
      <%= @product.description   %>
    </div>

    <div class="col-md-3">
      Price:
    </div>
    <div class="col-md-3">
      <%= @product.price %>
    </div>


    <div class="col-md-3">
      Quantity:
    </div>
    <div class="col-md-3">
      <%= @product.qty %>
    </div>

    <div class="col-md-3">
      Product Type:
    </div>
    <div class="col-md-3">
      <%= @product.product_type.type_name %>
    </div>
    <div class="col-md-3">
      Sub Product Type:
    </div>
    <div class="col-md-3">
      <%= @product.sub_product_type.type_name %>
    </div>
    <div class="col-md-3">
      Color:
    </div>
    <div class="col-md-3">
      <%= @product.color %>
    </div>

    <div class="col-md-3">
      Code:
    </div>
    <div class="col-md-3">
      <%= @product.code %>
    </div>

    <div class="col-md-3">
      Maker:
    </div>
    <div class="col-md-3">
      <%= @product.maker.name %>
    </div>


  </div>

  <br />
  <div class="col-lg-3">
    Product Images
  </div>
  <br />

  <div class="row text-center text-lg-left">
    <% @product.photos.each do |photo| %>
    <div class="col-lg-3 col-md-4 col-xs-6">
      <a href="#" class="d-block mb-4 h-100">
        <img class="img-fluid img-thumbnail" src="<%= photo.image.url %>" alt="">
      </a>
    </div>

    <% end  %>


  </div>

</div>
<!-- /.container -->
