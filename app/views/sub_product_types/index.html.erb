
<div class="container">

  <div class='row'>
    <div class='col-md-3'>
      <h2>Product Types</h2>
      </div>
      <div class='col-md-3'></div>
      <div class='col-md-3'>
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#new_product_type">New Product Type</button>
  </div>
  <div class='col-md-3'>
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#new_sub_product_type">New Sub Product Type</button>
</div>
  <table class="table">
    <thead>
      <tr>
        <th>SubType</th>
        <th>ProductType</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @sub_product_types.each do |sub_product_type| %>
      <tr>
        <td><%= sub_product_type.type_name %></td>
        <td><%= sub_product_type.product_type.type_name %></td>
        <td>
          <%= link_to 'Edit', edit_sub_product_type_path(sub_product_type), remote: true %> ||
          <%= link_to 'Destroy', sub_product_type, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
      <% end %>

    </tbody>
  </table>
</div>

<!-- Modal -->
<div id="editModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Edit Product Sub Type</h4>

        <button type="button" class="close" data-dismiss="modal">&times;</button>

      </div>
      <div class="modal-body" id='edit-sub-product'>

      </div>

    </div>

  </div>
</div>

<%= render 'new_modal' %>
<%= render 'new_product_type_modal' %>
